{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "./backend",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "strict": false,
    "moduleResolution": "node",
    "incremental": false,
    "declaration": false,
    "sourceMap": false
  },
  "include": ["backend/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}


