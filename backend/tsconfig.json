{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "outDir": "dist",
      "rootDir": ".",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "noEmitOnError": false,
      "strict": false,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "moduleResolution": "node",
      "incremental": false,
      "composite": false,
      "declaration": false,
      "declarationMap": false,
      "sourceMap": false,
      "removeComments": true,
      "paths": {
        "@modelcontextprotocol/sdk": ["./src/modelcontextprotocol-sdk.d.ts"]
      }
    },
    "include": ["**/*.ts"],
    "exclude": [
      "node_modules", 
      "dist", 
      "**/*.test.ts", 
      "**/*.spec.ts", 
      "test/**/*.ts",
      "*.md",
      "migrations/**/*.ts",
      "scripts/e2eLinkedIn.ts"
    ]
  }
  