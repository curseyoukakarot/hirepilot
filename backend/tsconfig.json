{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "outDir": "dist",
      "rootDir": ".",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "strict": false,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "moduleResolution": "node",
      "incremental": true,
      "tsBuildInfoFile": ".tsbuildinfo",
      "composite": false,
      "declaration": false,
      "declarationMap": false,
      "sourceMap": false,
      "removeComments": true,
      "paths": {
        "@modelcontextprotocol/sdk": ["./src/modelcontextprotocol-sdk.d.ts"]
      }
    },
    "include": ["./**/*.ts", "./**/*.d.ts"],
    "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts", "scripts/test*.ts"]
  }
  