{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "outDir": "dist",
      "rootDir": ".",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "strict": false,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "moduleResolution": "node",
      "paths": {
        "@modelcontextprotocol/sdk": ["./src/modelcontextprotocol-sdk.d.ts"]
      }
    },
    "include": ["./**/*.ts", "./**/*.d.ts"],
    "exclude": ["node_modules", "dist"]
  }
  