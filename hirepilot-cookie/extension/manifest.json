{
  "manifest_version": 3,
  "name": "HirePilot LinkedIn Assistant",
  "short_name": "HirePilot Assistant",
  "version": "2.1.0",
  "description": "Seamlessly export LinkedIn Sales Navigator leads and authenticate with HirePilot for streamlined recruitment workflows.",
  "action": {
    "default_title": "HirePilot LinkedIn Assistant",
    "default_popup": "popup.html",
    "default_icon": {
      "16":  "img/icon16.png",
      "32":  "img/icon32.png",
      "48":  "img/icon48.png",
      "128": "img/icon128.png"
    }
  },
  "icons": {
    "16":  "img/icon16.png",
    "32":  "img/icon32.png",
    "48":  "img/icon48.png",
    "128": "img/icon128.png"
  },
  "permissions": [ "cookies", "storage", "activeTab" ],
  "host_permissions": [
    "https://api.thehirepilot.com/*",
    "https://*.linkedin.com/*",
    "https://linkedin.com/*",
    "http://localhost:8080/*",
    "http://localhost:9999/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*",
        "https://linkedin.com/*",
        "https://*.linkedin.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}
